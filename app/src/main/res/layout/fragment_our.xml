<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8"
>

    <RelativeLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@mipmap/iv_bg_top_1"
    >
        <TextView style="@style/Wh"
                  android:layout_height="@dimen/dp_46"
                  android:gravity="center"
                  android:textSize="@dimen/sp_18"
                  android:textColor="@color/mainColor"
                  android:layout_marginTop="@dimen/dp_27"
                  android:text="我的"
                  android:textStyle="bold"
        />
        <com.library.common.widget.NiceImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/ic_default_head"
                android:layout_marginTop="@dimen/dp_92"
                android:layout_marginLeft="@dimen/dp_15"
        />
        <TextView
                android:id="@+id/tv_name"
                style="@style/wh"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/mainColor"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_alignTop="@+id/iv_head"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="name"
        />
        <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_edit_white"
                android:layout_alignTop="@+id/iv_head"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
                android:id="@+id/tv_sign"
                style="@style/wh"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/mainColor"
                android:layout_below="@+id/tv_name"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_7"
                android:text="编辑个人详细资料"
        />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_account"
            style="@style/Wh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_170"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_bg_round"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                android:adjustViewBounds="true"/>
        <ImageView
                android:id="@+id/iv_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_40"
                android:src="@color/color_9F9F9F"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"/>
        <LinearLayout
                android:layout_toRightOf="@+id/iv_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/iv_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/wh"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_my_account"
                    android:adjustViewBounds="true"/>
            <TextView
                    style="@style/wh"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="我的账号"/>

        </LinearLayout>
        <LinearLayout style="@style/wh"
                      app:layout_constraintLeft_toLeftOf="@+id/iv_line"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:gravity="center"
                      android:layout_marginRight="@dimen/dp_20"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_organ_apply"
                    android:adjustViewBounds="true"/>
            <TextView
                    style="@style/wh"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_333333"
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="机构入驻"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/iv_banne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_banner_1"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@+id/layout_account"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:adjustViewBounds="true"/>
    <LinearLayout
            style="@style/Wh"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_banne"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white">
        <LinearLayout
                style="@style/Wh"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
        >
            <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_setting"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:adjustViewBounds="true"/>
            <TextView
                    style="@style/wh"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="设置"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_right_gary"
                    android:layout_marginRight="@dimen/dp_5"
                    android:adjustViewBounds="true"/>
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="1dp"
        android:background="@color/white"
                   android:paddingLeft="@dimen/dp_50"
                   android:src="@color/color_line"
        />
        <LinearLayout
                style="@style/Wh"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
        >
            <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_about"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:adjustViewBounds="true"/>
            <TextView
                    style="@style/wh"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="关于"
                    android:layout_width="wrap_content"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_right_gary"
                    android:layout_marginRight="@dimen/dp_5"
                    android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>