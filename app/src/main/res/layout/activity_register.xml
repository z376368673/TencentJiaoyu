<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
>
    <ImageView
            android:id="@+id/iv_top_bg"
            style="@style/Wh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"
            android:src="@mipmap/iv_bg_top_2"
            android:scaleType="centerCrop"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_26"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_back_white"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_15"
                android:scaleType="centerCrop"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="注册"
                android:textSize="@dimen/sp_18"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/layout_content"
            style="@style/Wh"
            android:background="@drawable/shape_bg_round_white"
            app:layout_constraintTop_toBottomOf="@+id/iv_top_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_46"
            android:layout_marginRight="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_55"
            android:orientation="vertical">
        <LinearLayout
                style="@style/Wh"
                android:id="@+id/layout_password"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="设置密码:"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333333"/>
            <EditText
                    android:id="@+id/et_password1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="请输入6-20位密码"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textSize="@dimen/sp_13"/>
            <ImageView android:layout_width="@dimen/dp_30"
                       android:layout_height="@dimen/dp_30"
                       android:src="@mipmap/ic_look_password_n"
                       android:padding="@dimen/dp_10"
            />
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="@dimen/px_pot5"
                   android:background="@color/white"
                   android:paddingLeft="@dimen/dp_70"
                   android:src="@color/color_line"/>
        <LinearLayout
                style="@style/Wh"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="重复密码:"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333333"/>
            <EditText
                    android:id="@+id/et_password2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_35"
                    android:background="@color/transparent"
                    android:hint="请重复输入新密码"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textSize="@dimen/sp_13"/>
            <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_look_password_n"
                    android:padding="@dimen/dp_10"
            />
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
                   android:layout_height="@dimen/px_pot5"
                   android:background="@color/white"
                   android:paddingLeft="@dimen/dp_70"
                   android:src="@color/color_line"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintTop_toBottomOf="@+id/iv_top_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_70"
            android:text="登录"
            android:alpha="0.5"
            android:textStyle="bold"
            android:background="@drawable/shape_bg_circle_orange"
            android:textColor="@color/white" app:layout_constraintHorizontal_bias="0.0"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_next"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="注册即代表您已同意 《用户协议》和《隐私政策》"
                android:textSize="@dimen/sp_11"
                android:layout_centerInParent="true"
                android:textColor="@color/color_333333"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>