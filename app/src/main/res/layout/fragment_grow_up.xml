<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
>
    <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:background="@mipmap/iv_bg_top">
        <TextView style="@style/Wh"
                  android:layout_height="@dimen/dp_46"
                  android:gravity="center"
                  android:textSize="@dimen/sp_18"
                  android:textColor="@color/mainColor"
                  android:layout_marginTop="@dimen/dp_27"
                  android:text="成长"
                  android:textStyle="bold"
        />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layout_title"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
    >
        <androidx.cardview.widget.CardView
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_149"
                app:cardBackgroundColor="@color/color_F8F8F8"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_0"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout style="@style/WH"
                          android:orientation="vertical"
                          android:gravity="center">
                <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:src="@mipmap/iv_class_table"
                />
                <TextView style="@style/wh"
                          android:gravity="center"
                          android:textSize="@dimen/sp_14"
                          android:textColor="@color/black"
                          android:layout_marginTop="@dimen/sp_8"
                          android:text="聊天"
                          android:textStyle="bold"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/layout_2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_149"
                app:cardBackgroundColor="@color/color_F8F8F8"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_0"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_36"
        >
            <LinearLayout style="@style/WH"
                          android:orientation="vertical"
                          android:gravity="center">
                <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:src="@mipmap/iv_study_report"
                />
                <TextView style="@style/wh"
                          android:gravity="center"
                          android:textSize="@dimen/sp_14"
                          android:textColor="@color/black"
                          android:layout_marginTop="@dimen/sp_8"
                          android:text="聊天"
                          android:textStyle="bold"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintTop_toBottomOf="@+id/line1">
        <androidx.cardview.widget.CardView
                android:id="@+id/layout_3"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_149"
                app:cardBackgroundColor="@color/color_F8F8F8"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_0"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/dp_25"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout style="@style/WH"
                          android:orientation="vertical"
                          android:gravity="center">
                <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:src="@mipmap/iv_class_table"
                />
                <TextView style="@style/wh"
                          android:gravity="center"
                          android:textSize="@dimen/sp_14"
                          android:textColor="@color/black"
                          android:layout_marginTop="@dimen/sp_8"
                          android:text="聊天"
                          android:textStyle="bold"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/layout_4"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_149"
                app:cardBackgroundColor="@color/color_F8F8F8"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_0"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_36"
        >
            <LinearLayout style="@style/WH"
                          android:orientation="vertical"
                          android:gravity="center">
                <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_70"
                        android:src="@mipmap/iv_study_report"
                />
                <TextView style="@style/wh"
                          android:gravity="center"
                          android:textSize="@dimen/sp_14"
                          android:textColor="@color/black"
                          android:layout_marginTop="@dimen/sp_8"
                          android:text="聊天"
                          android:textStyle="bold"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>