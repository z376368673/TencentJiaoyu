<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8"
        android:orientation="vertical"
>
    <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@mipmap/iv_bg_top">
        <LinearLayout style="@style/wh"
                      android:id="@+id/layout_data_sq"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/dp_36"
                      android:orientation="vertical">
            <TextView style="@style/Wh"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/color_F8F8F8"
                      android:text="授权资源"
            />
            <com.library.common.widget.NiceImageView
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_height="@dimen/dp_3"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
            />
        </LinearLayout>
        <LinearLayout style="@style/wh"
                      android:id="@+id/layout_data_yp"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/dp_36"
                      android:orientation="vertical">
            <TextView style="@style/Wh"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/white"
                      android:text="我的云盘"
                      android:textStyle="bold"
            />
            <com.library.common.widget.NiceImageView
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_height="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
            />
        </LinearLayout>
        <LinearLayout style="@style/wh"
                      android:id="@+id/layout_data_ku"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:layout_marginTop="@dimen/dp_36"
                      android:orientation="vertical">
            <TextView style="@style/Wh"
                      android:gravity="center"
                      android:layout_width="wrap_content"
                      android:textSize="@dimen/sp_14"
                      android:textColor="@color/color_F8F8F8"
                      android:text="资源库"
            />
            <com.library.common.widget.NiceImageView
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_height="@dimen/dp_3"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
    >
        <EditText
                android:drawableLeft="@mipmap/ic_search_gray"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_7"
                android:hint="搜索当前文件夹内容"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="14sp"
                android:background="@color/white"
                android:drawablePadding="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_35"/>

        <ImageView
                android:gravity="center"
                android:layout_height="@dimen/dp_22"
                android:layout_width="@dimen/dp_22"
                android:src="@mipmap/ic_sort_gray"
                android:layout_marginLeft="@dimen/dp_13"
        />
        <ImageView
                android:gravity="center"
                android:layout_height="@dimen/dp_22"
                android:layout_width="@dimen/dp_22"
                android:src="@mipmap/ic_search_gray"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
        />
    </LinearLayout>
</LinearLayout>